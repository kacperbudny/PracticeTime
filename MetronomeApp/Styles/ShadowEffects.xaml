<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DropShadowEffect x:Key="BasicShadow"
                              Color="Black"
                              Direction="270"
                              ShadowDepth="3"
                              BlurRadius="9"
                              Opacity="0.3" />
    <DropShadowEffect x:Key="DisplayGlow"
                              Color="{DynamicResource DisplayOrangeColor}"
                              Direction="270"
                              ShadowDepth="1"
                              BlurRadius="9"
                              Opacity="0.5" />
    <DropShadowEffect x:Key="LightbulbGlow"
                              Color="{DynamicResource LightbulbGreenColor}"
                              Direction="270"
                              ShadowDepth="1"
                              BlurRadius="9"
                              Opacity="0.7" />
    <DropShadowEffect x:Key="NoShadow"
                              Opacity="0" />
</ResourceDictionary>